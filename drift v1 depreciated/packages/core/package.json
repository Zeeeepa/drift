{
  "name": "driftdetect-core",
  "version": "0.9.47",
  "description": "Core engine for Drift - multi-language pattern detection, call graph analysis, and security boundary tracking. Supports TypeScript, Python, C#, Java, PHP.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dadbodgeoff/drift"
  },
  "homepage": "https://github.com/dadbodgeoff/drift#readme",
  "keywords": [
    "pattern-detection",
    "static-analysis",
    "call-graph",
    "code-analysis",
    "security-analysis",
    "tree-sitter",
    "typescript",
    "python",
    "csharp",
    "java",
    "php",
    "ast",
    "code-quality",
    "architecture"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    },
    "./wrappers": {
      "types": "./dist/wrappers/index.d.ts",
      "import": "./dist/wrappers/index.js"
    },
    "./iec61131": {
      "types": "./dist/iec61131/index.d.ts",
      "import": "./dist/iec61131/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/storage && cp src/storage/schema.sql dist/storage/schema.sql",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "ignore": "^5.3.1",
    "minimatch": "^9.0.3",
    "piscina": "^5.1.4",
    "simple-git": "^3.30.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-c-sharp": "^0.21.3",
    "tree-sitter-cpp": "^0.22.0",
    "tree-sitter-go": "^0.21.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-php": "^0.22.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "typescript": "^5.3.0"
  },
  "optionalDependencies": {
    "driftdetect-native": "0.9.45"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.19.30",
    "@vitest/coverage-v8": "^1.0.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "driftdetect-detectors": "workspace:*"
  },
  "peerDependenciesMeta": {
    "driftdetect-detectors": {
      "optional": true
    }
  }
}
